<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.pinoytv"
           name="Pinoy TV"
           version="0.0.15"
           provider-name="todits.xbmc">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.pyamf" version="0.6.1"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
      </requires>
      <extension point="xbmc.python.pluginsource"
                library="default.py">
            <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary>Pinoy TV Channels</summary>
        <description>This is still in Alpha. Pinoy TV Channels.</description>
        <platform>all</platform>
      </extension>
    </addon>
    
    <addon id="plugin.video.tfctv"
           name="TFC.tv"
           version="0.0.29"
           provider-name="todits.xbmc">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
      </requires>
      <extension point="xbmc.python.pluginsource"
                library="default.py">
            <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary>TFC.tv</summary>
        <description>This is still in Alpha. Subscription to TFC.tv is required.</description>
        <platform>all</platform>
      </extension>
    </addon>
</addons>
